# Copy this file to .env.local for local development
#   cp env.example .env.local

##############################
# Required (server-side)
##############################

# Notion database page id(s).
# Single:   "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# Multiple: "id1,id2,id3"
NOTION_DATABASE_ID=

# Optional: Enable cache (any truthy value works in current config)
ENABLE_CACHE=

##############################
# Public config (NEXT_PUBLIC_*)
##############################

# Site meta
NEXT_PUBLIC_TITLE=Norkive
NEXT_PUBLIC_DESCRIPTION=Norkive - A Static WebBlog powered by Notion + Next.js
NEXT_PUBLIC_AUTHOR=
NEXT_PUBLIC_BIO=
NEXT_PUBLIC_LINK=http://localhost:3000/
NEXT_PUBLIC_KEYWORD=
NEXT_PUBLIC_LANG=kr-KR

# Contact links
NEXT_PUBLIC_CONTACT_EMAIL=
NEXT_PUBLIC_CONTACT_TWITTER=
NEXT_PUBLIC_CONTACT_GITHUB=
NEXT_PUBLIC_CONTACT_INSTAGRAM=
NEXT_PUBLIC_CONTACT_LINKEDIN=

# Appearance
NEXT_PUBLIC_APPEARANCE=light
# Example: "[18,6]" (night starts 18:00, ends 06:00)
NEXT_PUBLIC_APPEARANCE_DARK_TIME=

# Notion
NEXT_PUBLIC_NOTION_HOST=https://www.notion.so

# Notion property mapping (defaults are fine for most users)
NEXT_PUBLIC_NOTION_PROPERTY_TITLE=title
NEXT_PUBLIC_NOTION_PROPERTY_STATUS=status
NEXT_PUBLIC_NOTION_PROPERTY_SLUG=slug
NEXT_PUBLIC_NOTION_PROPERTY_CATEGORY=category
NEXT_PUBLIC_NOTION_PROPERTY_DATE=date
NEXT_PUBLIC_NOTION_PROPERTY_TAGS=tags
NEXT_PUBLIC_NOTION_PROPERTY_ICON=icon
NEXT_PUBLIC_NOTION_PROPERTY_SUMMARY=summary
NEXT_PUBLIC_NOTION_PROPERTY_TYPE=type
NEXT_PUBLIC_NOTION_PROPERTY_TYPE_POST=RECORD
NEXT_PUBLIC_NOTION_PROPERTY_TYPE_PROJECT=PROJECT
NEXT_PUBLIC_NOTION_PROPERTY_TYPE_ENGINEERING=ENGINEERING
NEXT_PUBLIC_NOTION_PROPERTY_TYPE_PAGE=Page
NEXT_PUBLIC_NOTION_PROPERTY_TYPE_NOTICE=Notice
NEXT_PUBLIC_NOTION_PROPERTY_TYPE_MENU=Menu
NEXT_PUBLIC_NOTION_PROPERTY_TYPE_SUB_MENU=SubMenu
NEXT_PUBLIC_NOTION_PROPERTY_TYPE_SUB_MENU_PAGE=SubMenuPage
NEXT_PUBLIC_NOTION_PROPERTY_STATUS_PUBLISH=Published
NEXT_PUBLIC_NOTION_PROPERTY_STATUS_INVISIBLE=Invisible

# Assets / UI
NEXT_PUBLIC_FAVICON=/favicon.ico
NEXT_PUBLIC_HOME_BANNER_IMAGE=/images/bg_image.png
NEXT_PUBLIC_FONT_STYLE=font-sans font-light
NEXT_PUBLIC_IMG_LAZY_LOAD_PLACEHOLDER=
NEXT_PUBLIC_IMG_TYPE=Notion
NEXT_PUBLIC_RANDOM_IMAGE_URL=
NEXT_PUBLIC_RANDOM_IMAGE_NOT_REPLACE_TEXT=images.unsplash.com

# Routing
NEXT_PUBLIC_RECORD_URL_PREFIX=general
NEXT_PUBLIC_PSEUDO_STATIC=false
NEXT_PUBLIC_MENU_SORT_BY=notion
NEXT_PUBLIC_SINCE=2024

# Share
NEXT_PUBLIC_RECORD_SHARE_BAR=true
NEXT_PUBLIC_RECORD_SHARE_SERVICES=email,twitter,link

# Code block / diagrams
NEXT_PUBLIC_PRISM_THEME_PREFIX_PATH=
NEXT_PUBLIC_PRISM_THEME_SWITCH=true
NEXT_PUBLIC_PRISM_THEME_LIGHT_PATH=
NEXT_PUBLIC_PRISM_THEME_DARK_PATH=
NEXT_PUBLIC_CODE_MAC_BAR=false
NEXT_PUBLIC_CODE_LINE_NUMBERS=false
NEXT_PUBLIC_CODE_COLLAPSE=true
NEXT_PUBLIC_CODE_COLLAPSE_EXPAND_DEFAULT=true
NEXT_PUBLIC_MERMAID_CDN=

# Analytics
NEXT_PUBLIC_ANAYLTICS_GOOGLE_ID=
NEXT_PUBLIC_ANALYTICS_BUSUANZI_ENABLE=true

# Giscus comments (required to enable comments)
NEXT_PUBLIC_COMMENT_GISCUS_REPONAME=
NEXT_PUBLIC_COMMENT_GISCUS_REPO_ID=
NEXT_PUBLIC_COMMENT_GISCUS_CATEGORY=
NEXT_PUBLIC_COMMENT_GISCUS_CATEGORY_ID=
NEXT_PUBLIC_COMMENT_GISCUS_MAPPING=pathname

##############################
# Build flags
##############################

# Bundle analyzer
ANALYZE=false

